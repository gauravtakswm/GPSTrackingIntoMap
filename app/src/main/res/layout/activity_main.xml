<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView android:text="@string/get_location_using_gps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_50"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_me_get_location"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dim_30"
        android:id="@+id/btnShowLocation"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_oval_blue"

        android:layout_below="@+id/textView"
         android:layout_marginTop="@dimen/dim_50" />
    <TextView
        android:padding="@dimen/dim_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnShowLocation"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="@dimen/dim_50"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewAddress" />
    <Button
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_my_location_into_map"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        android:paddingTop="@dimen/dim_30"
        android:paddingBottom="@dimen/dim_30"
        android:id="@+id/btnMapLocation"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"

          />
</RelativeLayout>
